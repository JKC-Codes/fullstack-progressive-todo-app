<!doctype html>
<html lang="en-gb">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Fullstack Todo App</title>
		<link rel="stylesheet" href="/css/main.css">
		<script src="/js/main.js" defer></script>
	</head>
	<body>
		<h2>Todos</h2>
		<div class="section-todos">
			<%_ if(todos.length === 0) { _%>
				<p>No todos found</p>
			<%_ } else { _%>
				<ul class="list-todos">
					<%_ for(const {_id, text, done} of todos) { _%>
						<%_ const checked = done ? 'checked' : '' _%>
						<li data-uid="<%= _id %>" class="todo"><label>Mark as done<input type="checkbox" class="checkbox-done" <%= checked %>></label><span class="todo-text"><%_ if(done) { _%><s><%_ } _%><%= text %><%_ if(done) { _%></s><%_ } _%></span><button type="button" class="button-edit">Edit</button><button type="button" class="button-delete">Delete</button></li>
					<%_ } _%>
				</ul>
			<%_ } _%>
		</div>

		<h2>Add A Todo</h2>
		<form action="/api/todos" method="post" id="form-submit">
			<label>New todo: <input type="text" name="text" required></label>
			<button type="submit">Add todo</button>
		</form>
	</body>
</html>